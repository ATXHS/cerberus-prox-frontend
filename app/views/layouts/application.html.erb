<!DOCTYPE html>
<html>
<head>
  <title>CerberusFrontend</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="main_header">
  <div id="tabs">
    <ul>
      <li class="<%= tab_selected?('dashboard')%>"><%= link_to 'dashboard', :controller => 'dashboard' %></li>
      <li class="<%= tab_selected?('cards')%>"><%= link_to "cards", :controller => 'cards'%></li>
      <li class="<%= tab_selected?('access_groups')%>"><%= link_to "groups", :controller => 'access_groups' %></li>
      <li class="<%= tab_selected?('doors')%>"><%= link_to "doors", :controller => 'doors' %></li>
      <li class="<%= tab_selected?('access_logs')%>"><%= link_to "swipes", :controller => 'access_logs' %></li>
    </ul>
  </div>
</div>
<div class="clearfix"></div>

<%= yield %>

</body>
</html>
